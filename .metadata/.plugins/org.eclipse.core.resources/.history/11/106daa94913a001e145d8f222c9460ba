package com.leanr.jpajdbc.repogitory;

import org.springframework.beans.factory.annotation.Autowired;
import org.springframework.boot.CommandLineRunner;
import org.springframework.stereotype.Component;

import com.leanr.jpajdbc.course.Course;

@Component
public class MyJdbcCommandLineRunner implements CommandLineRunner{
	
	@Autowired
	MyJdbcRepository repo;
	
	@Override
	public void run(String... args) throws Exception {
		repo.insert(new Course(1, "Learn JAVA", "Lipu"));
		repo.insert(new Course(2, "Learn Jpa", "Lipu"));
		repo.insert(new Course(3, "Learn Jdbc", "Lipu"));
		repo.insert(new Course(4, "Learn Spring", "Lipu"));
		
		repo.deleteById(1);
		
		System.out.println(repo.selectById(3));
		
		
	}
}
